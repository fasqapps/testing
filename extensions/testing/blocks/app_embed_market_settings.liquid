        {
        "type": "color",
        "id": "background_color_container",
        "label": "Background-color",
        "default": "#FFFFFF"
      },
        {
        "type": "color",
        "id": "title_font_color",
        "label": "Font Color",
        "default": "#000000"
      },
       {
        "type": "color",
        "id": "confirm_button_bg_color",
        "label": "Intereactive Element color",
