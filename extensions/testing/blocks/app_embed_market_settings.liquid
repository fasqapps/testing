      },
        {
        "type": "checkbox",
        "id": "image_header",
        "label": "Enabled",
        "default": false
      },
       {
        "type": "image_picker",
        "id": "image_header_file",
        "label": "Upload Image"
      },
        {
        "type": "header",
        "content": "Popup Setting"
      },
        {
        "type": "range",
        "id": "title_text_size",
