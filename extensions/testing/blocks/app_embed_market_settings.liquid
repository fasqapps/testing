        "default": 48
      },
       {
        "type": "range",
        "id": "border_radius_container",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Popup Border Radius",
        "default": 4
      },
      {
        "type": "range",
        "id": "title_font_size",
        "min": 10,
        "max": 40,
        "step": 1,
        "unit": "px",
